<resources>

    <!-- Base application theme. -->
    <style name="NotesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item> <!-- We could delete the title from the ui -->

    </style>

    <style name="logoIntro" parent="NotesTheme">
        <item name="android:fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">60sp</item>
    </style>

</resources>
