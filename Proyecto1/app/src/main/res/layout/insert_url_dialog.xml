<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">


    <TextView
        android:id="@+id/textToShowLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textToShowLabel" />

    <EditText
        android:id="@+id/inputTextToShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_below="@+id/textToShowLabel"/>

    <TextView
        android:id="@+id/linkLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputTextToShow"
        android:text="@string/linkLabel" />

    <EditText
        android:id="@+id/inputLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linkLabel"
        android:inputType="textUri" />
</RelativeLayout>